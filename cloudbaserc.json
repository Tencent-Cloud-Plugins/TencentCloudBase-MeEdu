{
  "version": "2.0",
  "envId": "{{env.ENV_ID}}",
  "framework": {
    "name": "meedu",
    "plugins": {
      "client": {
        "use": "@cloudbase/framework-plugin-container",
        "inputs": {
          "serviceName": "meedu",
          "servicePath": "/",
          "uploadType": "image",
          "imageInfo": {
            "imageUrl": "ccr.ccs.tencentyun.com/tcb-meedu/meedu-tcb:4.3.3"
          },
          "containerPort": 80,
          "customLogs": "stdout,/dev/stdout,/dev/stderr",
          "envVariables": {
            "DB_HOST": "{{env.DB_HOST}}",
            "DB_PORT": "{{env.DB_PORT}}",
            "DB_USER": "{{env.DB_USER}}",
            "DB_PASS": "{{env.DB_PASS}}",
            "DB_NAME": "meedu",
            "MEEDU_USERNAME": "meedu@meedu.meedu",
            "MEEDU_PASSWORD": "meedu123"
          },
          "initialDelaySeconds": 10,
          "volumeMounts": {
            "/bitnami/meedu": "meedu-cfs"
          }
        }
      }
    },
    "requirement": {
      "addons": [
        {
          "type": "CFS",
          "name": "meedu-cfs"
        },
        {
          "type": "CynosDB",
          "name": "meedu",
          "envMap": {
            "IP": "DB_HOST",
            "PORT": "DB_PORT",
            "USERNAME": "DB_USER",
            "PASSWORD": "DB_PASS"
          }
        }
      ],
      "environment": {
        "MEEDU_USERNAME": {
          "description": "管理控制台账号",
          "required": true,
          "default": "meedu@meedu.meedu"
        },
        "MEEDU_PASSWORD": {
          "description": "初始管理控制台密码",
          "required": true,
          "default": "meedu123"
        }
      }
    }
  }
}